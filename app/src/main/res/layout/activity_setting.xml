<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.ui.activity.SettingActivity"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.google.android.material.appbar.AppBarLayout
        android:paddingTop="30dp"
        android:background="@color/orange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            app:title="Setting"
            android:id="@+id/mtb"
            android:paddingTop="4dp"
            app:titleTextColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:navigationIcon="@drawable/ic_arrow_back_24"/>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:id="@+id/allCategories"
                android:layout_width="match_parent"
                android:backgroundTint="@color/orange"
                android:background="@drawable/bg_radius_10">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/category"/>

                <TextView
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/all_categories"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:id="@+id/allPaymentMethods"
                android:layout_width="match_parent"
                android:layout_marginVertical="20dp"
                android:backgroundTint="@color/orange"
                android:background="@drawable/bg_radius_10">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/payment"/>

                <TextView
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/all_payment_methods"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:id="@+id/allOrderTypes"
                android:layout_width="match_parent"
                android:backgroundTint="@color/orange"
                android:background="@drawable/bg_radius_10">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/shopping_bag"/>

                <TextView
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/all_order_types"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>