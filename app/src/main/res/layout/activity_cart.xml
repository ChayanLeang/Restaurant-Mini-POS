<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.ui.activity.CartActivity"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/abl"
        android:paddingTop="30dp"
        android:background="@color/orange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/mtb"
            android:paddingTop="4dp"
            app:title="Product Cart"
            app:titleTextColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:navigationIcon="@drawable/ic_arrow_back_24"/>
    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:padding="20dp"
        app:tint="@color/grey"
        android:id="@+id/noItemIV"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_search_24"
        android:background="@drawable/bg_circle"
        android:contentDescription="@string/text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/gains_boro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:textSize="16sp"
        android:gravity="center"
        android:id="@+id/noItemTV"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/you_have_no_item_yet"
        app:layout_constraintTop_toBottomOf="@id/noItemIV"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:paddingTop="10dp"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/abl"
        app:layout_constraintBottom_toTopOf="@id/totalPriceLL"/>

    <LinearLayout
        android:padding="10dp"
        android:layout_height="110dp"
        android:orientation="vertical"
        android:id="@+id/totalPriceLL"
        android:layout_width="match_parent"
        android:backgroundTint="@color/orange"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_top_radius_10">

        <TextView
            android:textSize="18sp"
            android:id="@+id/totalPriceTV"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_price_format" />

        <com.google.android.material.button.MaterialButton
            app:cornerRadius="5dp"
            android:textSize="17sp"
            android:layout_height="50dp"
            android:id="@+id/paymentMBt"
            android:text="@string/payment"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:backgroundTint="@color/charcoal"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>